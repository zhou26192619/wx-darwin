<!--component/data.wxml-->
<wxs module="decimal" src="../../filter/decimal.wxs"></wxs>
<view class='container tab-container main'>
  <view style='margin-top:20rpx;'>
    <view style='font-size:24rpx;color:#888;margin-bottom:12rpx;'>输入框</view>
    <c-input title='输入框' placeholder='请输入'></c-input>
  </view>
  <view style='margin-top:20rpx;'>
    <view style='font-size:24rpx;color:#888;margin-bottom:12rpx;'>search搜索框</view>
    <c-search icon='https://dsop.dpv.siemens.com.cn/cloud/wx/magnifier.png'></c-search>
  </view>
  <view style='margin-top:20rpx;display:flex;flex-direction:column;'>
    <view style='font-size:24rpx;color:#888;margin-bottom:12rpx;'>drop-input下拉输入框</view>
    <c-drop-input preIcon='https://dsop.dpv.siemens.com.cn/cloud/wx/magnifier.png' sufIcon='https://dsop.dpv.siemens.com.cn/cloud/wx/magnifier.png'></c-drop-input>
  </view>
  <view style='margin-top:20rpx;display:flex;justify-content:space-between;flex-wrap:wrap;'>
    <c-button custom-class='c-bt' bind:onClick='handleTap'>
      <view>按钮</view>
    </c-button>
    <c-button custom-class='c-bt' bind:onClick='handleTap' melody='primary' loading='{{loading}}'>
      <view>下载</view>
    </c-button>
    <c-button custom-class='c-bt' bind:onClick='handleTap' melody='info'>
      <view>info</view>
    </c-button>
    <c-button custom-class='c-bt' bind:onClick='handleTap' melody='err'>
      <view>err</view>
    </c-button>
  </view>
  <view style='margin-top:20rpx;display:flex;justify-content:space-between;flex-wrap:wrap;'>
    <c-button bind:onClick='handleDialog'>
      <view>点击显示dialog</view>
    </c-button>
  </view>
  <view style='margin-top:20rpx;'>
    <c-timeline mode='both'>
      <c-timeline-item wx:for='{{timeline}}' wx:key='{{index}}' status='{{item.arrive}}'>
        <view style='font-size:26rpx;color:#ccc;margin:0 12rpx;line-height:1.2;'>{{item.time}}</view>
        <view style='font-size:28rpx;color:#666;margin:0 12rpx 20rpx 12rpx;'>{{item.text}}</view>
      </c-timeline-item>
    </c-timeline>
  </view>
  <view style='margin-top:20rpx;'>
    <c-card>
    </c-card>
  </view>
  <view style='margin-top:20rpx;'>
    <c-image defaultSrc='https://fuss10.elemecdn.com/e/5d/4a731a90594a4af544c0c25941171jpeg.jpeg' src='https://cube.elemecdn.com/6/94/4d3ea53c084bad6931a56d5158a48jpeg.jpeg'></c-image>
  </view>
  <movable-area scale-area style="height: 500px;width:100%;  background: #132145;display:none;">
    <movable-view scale style="height: 100%; width: 100%; background: blue;" x="{{x}}" y="{{y}}" direction="all">
      <view style='height: 100%; width: 100%; '>
        <view>aaaa</view>
        <view>aaaa</view>
        <view>aaaa</view>
      </view>
    </movable-view>
  </movable-area>
</view>
<c-dialog show='{{showDialog}}' option='{{dialogOption}}' bind:onClose='handleDialogClose' bind:onConfirm='handleDialogConfirm'>
  <!-- <view slot='head'>自定义标题</view> -->
  <view slot='body'>自定义内容</view>
  <!-- <view slot='foot'>自定义底部</view> -->
</c-dialog>