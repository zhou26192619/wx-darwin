.main {
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  background: rgba(0, 0, 0, 0.3);
  overflow: hidden;
  justify-content: center;
  box-sizing: border-box;
  z-index: 101;
}

.dialog {
  width: 80%;
  background: white;
  border-radius: 12rpx;
}

.head {
  padding: 30rpx 30rpx;
  color: #333;
  font-size: 32rpx;
  display: flex;
  flex-wrap: nowrap;
}

.content {
  padding: 0rpx 30rpx;
  color: #666;
  font-size: 28rpx;
}

.foot {
  padding: 30rpx 30rpx;
  color: #333;
  font-size: 28rpx;
  display: flex;
  justify-content: flex-end;
}

.title {
  flex-grow: 1;
}

.close {
  flex-shrink: 0;
  padding-left: 10rpx;
}
